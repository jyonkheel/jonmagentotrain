    <!--Config Schema Locator class    -->
    <virtualType name="Unit1\Test1\Model\Config\SchemaLocator" type="Magento\Framework\Config\GenericSchemaLocator">
        <arguments>
            <argument name="schema" xsi:type="string">custom_config.xsd</argument>
